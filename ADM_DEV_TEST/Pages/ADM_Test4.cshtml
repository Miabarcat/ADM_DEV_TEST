@page "/ADM_Test4"
@model ADM_DEV_TEST.Pages.ADM_Test4Model
@{
    ViewData["Title"] = "Test 4";
}

<h1>Test 4</h1>
<h4>Escribe una función que verifique si un texto es un palíndromo</h4>
<div class="container">
    <div class="row align-items-start">        
        <form method="post">
            <div class="col">
                <textarea type="text" asp-for="ModelTest4.Text" placeholder="Text" ></textarea>
            </div>
             <div class="col">
                 <button type="submit">Palindrome?</button>
             </div>            
        </form>
        <div class="col">
            <label for="result">Result</label>
            <span id="result">@Model?.ModelTest4?.Result</span>
        </div>
    </div>
</div>  
