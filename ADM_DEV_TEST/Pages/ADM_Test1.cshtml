@page "/ADM_Test1"
@model ADM_DEV_TEST.Pages.ADM_Test1Model
@{
    ViewData["Title"] = "Test 1";
}

<h1>Test 1</h1>
<h4>Función para multiplicar dos números sin utilizar el signo de multiplicación.</h4>
<div class="container">
    <div class="row align-items-start">        
        <form method="post">
            <div class="col">
                <input type="number" asp-for="ModelTest1.Num1" placeholder="Num1" />
            </div>
             <div class="col">
                <input type="number" asp-for="ModelTest1.Num2" placeholder="Num2" />    
             </div>
             <div class="col">
                 <button type="submit">Multiply</button>
             </div>            
        </form>
        <div class="col">
            <label for="result">Result</label>
            <span id="result">@Model?.ModelTest1?.MultiResult</span>
        </div>
    </div>
</div>            
    

